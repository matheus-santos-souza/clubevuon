// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Cliente {
  id        String    @id @default(uuid())
  cpf       String    
  nome      String    
  fotourl   String?   
  seloid    String?
  pontos    Int       @default(0)
  createdAt DateTime? @default(now())
  @@map("cliente")
}

model Selo {
  id        String    @id @default(uuid())
  titulo    String    
  fotourl   String?   
  capafotourl   String?   

  @@map("selo")
}

model Selocliente {
  clientid    String    @id
  seloid      String?
  @@map("selocliente")
}

model Trilha {
  id       String    @id @default(uuid())
  titulo    String    
  descricao String    
  tipo      String    
  fotourl   String?   
  createdAt DateTime? @default(now())
  seloid    String?

  @@map("trilha")
}

model Trilhacliente {
  clientid        String    @id
  trilhaid        String?

  @@map("trilhacliente")
}

model Missao {
  id        String    @id @default(uuid())
  titulo    String    
  pontos    Int
  fotourl   String?   
  trilaid   String?

  @@map("missao")
}

model Missaocliente {
  clientid        String    @id
  missaoid        String?

  @@map("missaocliente")
}

model Oferta {
  id        String    @id @default(uuid())
  titulo    String    
  pontos    Int
  fotourl   String?   
  exclusiva Boolean   @default(false)

  @@map("oferta")
}

model Indicado {
  id              String    @id @default(uuid())
  cpfcliente      String    
  cpfindicado     String    
  sucesso         Boolean   @default(false)
  createdAt DateTime? @default(now())

  @@map("indicado")
}

model Vuonvenda {
  id              String    @id @default(uuid())
  cpf             String    
  nomeproduto     String
  ean             String
  loja            String
  preco           Int

  @@map("vuonvenda")
}
